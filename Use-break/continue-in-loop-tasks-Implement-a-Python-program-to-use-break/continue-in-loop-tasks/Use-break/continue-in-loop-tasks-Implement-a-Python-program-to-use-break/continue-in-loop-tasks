# Demonstrating 'continue'
print("--- Using 'continue' ---")
for i in range(1, 11):
    if i % 2 == 0:  # If 'i' is even
        continue    # Skip the rest of the current iteration and move to the next
    print(f"Odd number: {i}")

# Demonstrating 'break'
print("\n--- Using 'break' ---")
fruits = ["apple", "banana", "cherry", "date", "elderberry"]
for fruit in fruits:
    if fruit == "date":
        print("Found 'date', stopping the loop.")
        break  # Exit the loop entirely
    print(f"Processing fruit: {fruit}")

# Demonstrating both 'break' and 'continue' in a single loop
print("\n--- Using both 'break' and 'continue' ---")
numbers = [10, 20, 30, 40, 50, 60, 70, 80]
for num in numbers:
    if num % 3 == 0:  # Skip multiples of 3
        print(f"Skipping {num} (multiple of 3)")
        continue
    if num > 60:  # Stop if number exceeds 60
        print(f"Number {num} exceeds 60, breaking loop.")
        break
    print(f"Processing number: {num}")
