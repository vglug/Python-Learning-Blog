# Loop runs 5 times
for i in range(5):
    # Take input from the user
    num = int(input("Enter a number: "))

    # 'break' example — stop the loop if number is negative
    if num < 0:
        print("Negative number found! Breaking the loop.")
        break

    # 'pass' example — do nothing if number is zero
    elif num == 0:
        print("Zero entered — doing nothing (pass).")
        pass  # Placeholder statement (no action)

    # 'continue' example — skip even numbers
    elif num % 2 == 0:
        print("Even number — skipping this one.")
        continue  # Skip to the next iteration

    # Print only if the number is odd and positive
    print("You entered an odd positive number:", num)

# Final message after loop ends
print("Program finished.")
